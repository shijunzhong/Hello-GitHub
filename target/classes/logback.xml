<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="log.base" value="noob"/>
	
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="file-server" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/data/log/${log.base}/server.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/data/log/${log.base}/server-%d{yyyy-MM-dd}.log</FileNamePattern>
			<MaxHistory>6</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date [%thread] %-5level %logger{80} -%msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="file-error" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/data/log/${log.base}/error.log</file>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/data/log/${log.base}/error-%d{yyyy-MM-dd}.log</FileNamePattern>
			<MaxHistory>6</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date [%thread] %-5level %logger{80} -%msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="file-sql" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/data/log/${log.base}/server-sql.log</file>
		<filter class="ch.qos.logback.core.filter.EvaluatorFilter">
			<evaluator>
				<expression>message.contains("executed in")</expression>
			</evaluator>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/data/log/${log.base}/server-sql-%d{yyyy-MM-dd}.log</FileNamePattern>
			<MaxHistory>6</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date [%thread] %-5level %logger{80} -%msg%n</pattern>
		</encoder>
	</appender>
	
	<logger name="java.sql.Connection" level="ERROR" />
    <logger name="java.sql.PreparedStatement" level="ERROR" />  
    <logger name="java.sql.Statement" level="ERROR" />
    <logger name="com.ibatis" level="ERROR" />
    <logger name="com.ibatis.common.jdbc.SimpleDataSource" level="ERROR" />
    <logger name="com.ibatis.common.jdbc.ScriptRunner" level="ERROR" />
    <logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="ERROR" />
    <logger name="com.danga.MemCached" level="ERROR" />
    <logger name="org.springframework.test" level="ERROR" />
 	<logger name="druid.sql.Connection" level="INFO" />
    <logger name="druid.sql.Statement" level="INFO" />
    <logger name="druid.sql.ResultSet" level="OFF" />
 	<logger name="org.quartz" level="INFO" />
	<logger name="jdbc.audit" level="OFF" />
	<logger name="jdbc.resultset" level="OFF" />
	<logger name="jdbc.sqlonly" level="OFF" />
	<logger name="org.quartz" level="INFO" />
	<logger name="jdbc.sqltiming" level="INFO" />
	
	<root level="info">
        <appender-ref ref="stdout" />
        <appender-ref ref="file-server" />
        <appender-ref ref="file-error" />
        <appender-ref ref="file-sql" />
    </root>
</configuration>


